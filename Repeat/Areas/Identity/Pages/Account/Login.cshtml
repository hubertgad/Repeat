@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    
    <div class="col-md-3"></div>
    
    <div class="col-md-6">

        <section class="mb-4">
            <form id="demo" method="post" class="my-center" asp-page-handler="Demo">
                <input type="hidden" asp-for="Input.Email" value="demo@hubertgad.net" class="form-control" />
                <input type="hidden" asp-for="Input.Password" value="Demo123$" class="form-control" />
                <button type="submit" class="btn btn-success btn-lg mt-lg-4">USE DEMO ACCOUNT</button>
            </form>
        </section>

        <h4 class="text-center text-uppercase">Or</h4>

        <section class="mt-4">
            <form id="account" method="post">
                <h4 class="text-center text-uppercase">Log in using you account</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
                <div class="form-group">
                    @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                    <p class="text-center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>

    </div>

    <div class="col-md-3"></div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}