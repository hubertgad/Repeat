@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    var rv = ViewContext.RouteData.Values;
    string page = $"{rv["page"]}".ToLowerInvariant();
    <div>
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="btn btn-nav @(page.StartsWith("/taketest") ?  "active" : "")" asp-area="" asp-page="/TakeTest/Index">Test</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-nav @(page.StartsWith("/administration") ?  "active" : "")" asp-area="" asp-page="/Administration/Questions/Index">Administration</a>
            </li>
        </ul>
    </div>
}