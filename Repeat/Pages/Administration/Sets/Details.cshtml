@page
@model Repeat.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Set</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Set.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Set.Name)
        </dd>
    </dl>
</div>
<div>
    <h6>Questions in this set:</h6>
    <hr />
    <dl class="row">
        @for (int i = 0; i < Model.Set.QuestionSets.Count(); i++)
        {
            <dt class="col-sm-3">
                <label>Question @(i + 1):</label>
            </dt>
            <dd class="col-sm-9">
                <label>@Model.Set.QuestionSets[i].Question.QuestionText</label>
            </dd>
        }
    </dl>
</div>
<div>
    @{ if (Model.Set.OwnerID == Model.CurrentUserID)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Set.ID" class="btn btn-warning">Edit</a> <a>|</a>
        }
    }
    <a asp-page="./Index" class="btn btn-dark">Back to List</a>
</div>