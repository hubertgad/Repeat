@page
@model Repeat.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<br />
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Set.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Set.Name)
        </dd>
    </dl>
    <h6>Questions in this set:</h6>
    <hr />
    <dl class="row">
        @for (int i = 0; i < Model.Questions.Count(); i++)
        {
            <dt class="col-sm-3">
                <label>Question @(i + 1):</label>
            </dt>
            <dd class="col-sm-9">
                <label>@Model.Questions[i].QuestionText</label>
            </dd>
        }
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Set.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-dark">Back to List</a>
    </form>
</div>